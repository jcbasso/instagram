<Connected>:
    canvas:
        Color:
            # #263238
            rgb: 0x26 / 255.0, 0x32 / 255.0, 0x38 / 255.0

        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 30
        Label:
            text: "Things to do:"
            font_size: 32
        BoxLayout:
            orientation: 'horizontal'
            padding: [10,10,10,10]
            Button:
                text: "Update DB"
                font_size: 24
                on_press: root.update()
            Button:
                text: "Follow"
                font_size: 24
                on_press: root.follow()
            Button:
                text: "Unfollow"
                font_size: 24
                on_press: root.unfollow()

        Button:
            text: "Disconnect"
            font_size: 24
            on_press: root.disconnect()
