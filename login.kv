#:include connected.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 40

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Login'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28
                write_tab: False
                multiline: False
                on_text_validate: root.do_login(login.text,password.text)

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28
                write_tab: False
                multiline: False
                on_text_validate: root.do_login(login.text,password.text)

        Button:
            text: 'Log in'
            font_size: 24

            on_press: root.do_login(login.text, password.text)
